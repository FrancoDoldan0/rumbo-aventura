generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * =========================
 * ADMIN
 * =========================
 */
model AdminUser {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

/**
 * =========================
 * CATEGORÍAS
 * =========================
 */
model Category {
  id       Int     @id @default(autoincrement())
  name     String
  slug     String  @unique
  imageKey String? 
  imageUrl String? 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  subcategories Subcategory[]
  banners       Banner[]
  offers        Offer[]
  products      Product[]     // ✅ Añadido para cerrar relación con Product
}

/**
 * =========================
 * SUBCATEGORÍAS
 * =========================
 */
model Subcategory {
  id   Int    @id @default(autoincrement())
  name String
  slug String

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug, categoryId])
  @@index([categoryId])
}

/**
 * =========================
 * PRODUCTOS
 * =========================
 */
model Product {
  id          Int     @id @default(autoincrement())
  name        String
  slug        String  @unique
  description String?

  price      Float
  offerPrice Float?

  sku   String?
  stock Int?

  status ProductStatus @default(ACTIVE)

  // Variantes
  hasVariants Boolean          @default(false)
  variants    ProductVariant[]

  // Categoría y Subcategoría
  categoryId    Int?
  category      Category?    @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  subcategoryId Int?
  subcategory   Subcategory? @relation(fields: [subcategoryId], references: [id], onDelete: SetNull)

  // Etiquetas e Imágenes
  productTags ProductTag[]
  images      ProductImage[]
  offers      Offer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([categoryId])
  @@index([subcategoryId])
}

/**
 * =========================
 * RELACIÓN PRODUCTO-ETIQUETA
 * =========================
 */
model ProductTag {
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tagId     Int
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([productId, tagId])
}

/**
 * =========================
 * IMÁGENES DE PRODUCTO
 * =========================
 */
model ProductImage {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  key     String
  alt     String?
  isCover Boolean @default(false)

  sortOrder Int @default(0) // Usado por uploads/route.ts
  order     Int @default(0) // Usado por products/route.ts

  size      Int?
  createdAt DateTime @default(now())

  @@index([productId, sortOrder])
  @@index([productId, order])
}

/**
 * =========================
 * OFERTAS
 * =========================
 */
model Offer {
  id          Int     @id @default(autoincrement())
  title       String
  description String?

  discountType String? // "PERCENTAGE" | "FIXED"
  discountVal  Float?
  startAt      DateTime?
  endAt        DateTime?

  isActive Boolean @default(true)

  // Relaciones opcionales
  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  productId Int?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  tagId Int?          // ✅ Añadido para cerrar relación con Tag
  tag   Tag? @relation(fields: [tagId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([categoryId])
  @@index([productId])
}

/**
 * =========================
 * BANNERS
 * =========================
 */
model Banner {
  id Int @id @default(autoincrement())

  title    String
  imageUrl String
  imageKey String

  linkUrl   String?
  placement BannerPlacement @default(HOME)

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  isActive Boolean @default(true)

  startAt DateTime?
  endAt   DateTime?

  sortOrder Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * =========================
 * AUDITORÍA Y ETIQUETAS
 * =========================
 */
model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  entity    String
  entityId  String?
  userId    String?
  ip        String?
  userAgent String?  // ✅ Campo añadido
  details   String?  // ✅ Campo añadido (usamos String para guardar el JSON stringificado)
  createdAt DateTime @default(now())
}

model Tag {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  productTags ProductTag[]
  offers      Offer[]      // Relación inversa con Offer
  createdAt   DateTime     @default(now())
}

/**
 * =========================
 * ENUMS Y VARIANTES
 * =========================
 */
enum ProductStatus {
  ACTIVE
  INACTIVE
  DRAFT
  AGOTADO
}

enum BannerPlacement {
  HOME
  PRODUCTS
  CATEGORY
  CHECKOUT
}

model ProductVariant {
  id            Int     @id @default(autoincrement())
  productId     Int
  product       Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  label         String
  price         Float?
  priceOriginal Float?
  sku           String?
  stock         Int?
  sortOrder     Int     @default(0)
  active        Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}